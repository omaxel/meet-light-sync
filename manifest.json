{
  "manifest_version": 3,
  "name": "Meet Light Sync",
  "version": "1.1.1",
  "description": "Turn on/off your Elgato Key Light Air when you join/leave a Google Meet call.",
  "permissions": [
    "storage",
    "background"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
